{
  "compilerOptions": {
    "target": "ESNext", // Modern JavaScript target
    "module": "ESNext", // Use ES Modules
    "moduleResolution": "Node", // Ensure correct module resolution
    "esModuleInterop": true, // Allow interop between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "strict": true, // Enable strict type-checking
    "skipLibCheck": true, // Skip type-checking .d.ts files
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src" // Root directory for source files
  }
}